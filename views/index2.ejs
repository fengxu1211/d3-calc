              <input class="span2" type="text" placeholder="Email">
              <input class="span2" type="password" placeholder="Password">
              <button type="submit" class="btn">Sign in</button>
            </form>
            <form id="mw-search-form" class="navbar-form pull-left">
              <input class="span2" type="text" placeholder="Battletag">
              <button id="mw-search-form-submit" type="submit" class="btn">Search</button>
            </form>
          </div><!--/.nav-collapse -->
