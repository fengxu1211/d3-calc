      </div>
    </div>

    <div class="container">

      <!-- Main hero unit for a primary marketing message or call to action 
      <div class="hero-unit">
        <h1>Hello, world!</h1>
        <p>This is a template for a simple marketing or informational website. It includes a large callout called the hero unit and three supporting pieces of content. Use it as a starting point to create something more unique.</p>
        <p><a class="btn btn-primary btn-large">Learn more &raquo;</a></p>
      </div>
      -->

      <!-- Example row of columns -->
      <div id="mw-hero-list" class="row">
      </div>
      
      <div id="mw-hero-detail" class="hero-unit" style="display:none">
        <button class="btn" type="button">Back to hero list</button>
      </div>

      <hr>

      <footer>
        <p>&copy; Ludwig Xu 2012</p>
      </footer>

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script data-main="js/main" src="js/require-jquery.js"></script>
    <script id="account-summary" type="template">
      <h1>Diablo {{ battleTag }}</h1>
      <p>Totals</p>
      <div>Elite Kills: <strong>{{ kills.elites }}</strong></div>
      <div>Lifetime Kills: <strong>{{ kills.monsters }}</strong></div>
      <div>Last Updated On: <strong>{{ lastUpdated }}</strong></div>
      <p><a class="btn btn-primary btn-large">Learn more &raquo;</a></p>
    </script>
    <script id="hero-summary" type="template">
      <h2>{{ name }}</h2>
      <div class="hero-portrait {{portrait}}"></div>
      <p>{{classname}}&nbsp;{{ level }}({{ paragonLevel }})</p>
      <p><a class="btn" href="#profile/{{account}}/hero/{{id}}">View Profile &raquo;</a></p>
    </script>
    <script id="hero-detail" type="template">
      <h2>{{ name }}</h2>
      <div class="section-header">
        <h3>Attributes</h3>
      </div>
      <div class="section-body">
        <ul class="attributes-core">
          <li>
            <span class="label">Strength</span>
            <span class="value">{{stats.strength}}</span>
          </li>
          <li>
            <span class="label">Dexterity</span>
            <span class="value">{{stats.dexterity}}</span>
          </li>
          <li>
            <span class="label">Intelligence</span>
            <span class="value">{{stats.intelligence}}</span>
          </li>
          <li>
            <span class="label">Vitality</span>
            <span class="value">{{stats.vitality}}</span>
          </li>
          <li class="clear"></li>
        </ul>
        <ul class="attributes-core">
          <li>
            <span class="label">Armor</span>
            <span class="value">{{stats.armor}}</span>
          </li>
          <li>
            <span class="label">Damage</span>
            <span class="value">{{stats.damage}}</span>
          </li>
        </ul>
        <ul class="attributes-core">
          <li>
            <span class="label">attackSpeed</span>
            <span class="value">{{stats.attackSpeed}}</span>
          </li>
          <li>
            <span class="label">life</span>
            <span class="value">{{stats.life}}</span>
          </li>
          <li>
            <span class="label">critDamage</span>
            <span class="value">{{stats.critDamage}}</span>
          </li>
          <li>
            <span class="label">critChance</span>
            <span class="value">{{stats.critChance}}</span>
          </li>
          <li>
            <span class="label">magicFind</span>
            <span class="value">{{stats.magicFind}}</span>
          </li>
        </ul>
      </div>
    </script>
  </body>
</html>